<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//ibatis.apache.org//DTD Config 3.0//EN"
        "http://ibatis.apache.org/dtd/ibatis-3-config.dtd"> 

<configuration>
    <settings>
        <!--<setting name="cacheEnabled" value="true"/>-->
        <setting name="logImpl" value="SLF4J"/>
        <!--<setting name="useStatementNamespaces" value="true"/>-->
    </settings>
    
    <typeAliases>
        <typeAlias type="com.chinchilla.persistence.objects.Auditoria" alias="Auditoria"/>
        <typeAlias type="com.chinchilla.persistence.objects.Labor" alias="Labor"/>
        <typeAlias type="com.chinchilla.persistence.objects.OrdenCompra" alias="OrdenCompra"/>
        <typeAlias type="com.chinchilla.persistence.objects.Meteorologia" alias="Meteorologia"/>
        <typeAlias type="com.chinchilla.persistence.objects.Personal" alias="Personal"/>
        <typeAlias type="com.chinchilla.persistence.objects.Parcela" alias="Parcela"/>
        <typeAlias type="com.chinchilla.persistence.objects.LaborParcela" alias="LaborParcela"/>
        <typeAlias type="com.chinchilla.persistence.objects.CostePersonal" alias="CostePersonal"/>
        <typeAlias type="com.chinchilla.persistence.objects.LaborPersonal" alias="LaborPersonal"/>
        <typeAlias type="com.chinchilla.persistence.objects.LaborProducto" alias="LaborProducto"/>
        <typeAlias type="com.chinchilla.persistence.objects.Producto" alias="Producto"/>
        <typeAlias type="com.chinchilla.persistence.objects.LaborMaquinaria" alias="LaborMaquinaria"/>
        <typeAlias type="com.chinchilla.persistence.objects.Maquinaria" alias="Maquinaria"/>
        <typeAlias type="com.chinchilla.persistence.objects.Electricidad" alias="Electricidad"/>
    </typeAliases>

    <!-- Identify all SQL Map XML files to be loaded by this SQL map.
         Notice the paths are relative to the classpath. For now, we only have one -->
    <mappers>
        <mapper resource="com/chinchilla/persistence/mappers/AuditoriaMappers.xml" />
        <mapper resource="com/chinchilla/persistence/mappers/ParcelaMappers.xml" />
        <mapper resource="com/chinchilla/persistence/mappers/CoordenadaMappers.xml" />
        <mapper resource="com/chinchilla/persistence/mappers/ProduccionMappers.xml" />
        <mapper resource="com/chinchilla/persistence/mappers/CultivoMappers.xml" />
        <mapper resource="com/chinchilla/persistence/mappers/LaborMappers.xml" />
        <mapper resource="com/chinchilla/persistence/mappers/MeteorologiaMappers.xml" />
        <mapper resource="com/chinchilla/persistence/mappers/OrdenCompraMappers.xml" />
        <mapper resource="com/chinchilla/persistence/mappers/MaquinariaMappers.xml" />
        <mapper resource="com/chinchilla/persistence/mappers/CostePersonalMappers.xml" />
        <mapper resource="com/chinchilla/persistence/mappers/ProductoMappers.xml" />
        <mapper resource="com/chinchilla/persistence/mappers/ElectricidadMappers.xml" />
    </mappers>
</configuration>
