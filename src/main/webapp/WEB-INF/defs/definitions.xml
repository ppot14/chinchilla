<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
       "http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<!-- DEFAULT MAIN TEMPLATE -->
	<definition name="template" template="layout/default">
            <put-attribute name="title" value="Tiles tutorial homepage" />
            <put-attribute name="title_left" value="header/title" />
            <put-attribute name="title_right" value="header/title2" />
            <put-attribute name="menu" value="menu/menu" />
            <put-attribute name="leftpanel" value="left/default" />
            <put-attribute name="rightpanel" value="right/default" />
            <put-attribute name="footer" value="footer/contact" />
	</definition>

	<definition name="inicio" extends="template">
		<put-attribute name="content_main" value="content/default"/>
	</definition>

	<definition name="parcelas-mapa" extends="template">
		<put-attribute name="content_main" value="content/mapa-parcelas"/>
	</definition>
        
        <definition name="parcelas-mapa-form-labor" extends="parcelas-mapa">
		<put-attribute name="rightpanel" value="right/form-labor"/>
	</definition>
        
        <definition name="labores-tabla" extends="template">
		<put-attribute name="leftpanel" value="left/submenu-labor"/>
		<put-attribute name="content_main" value="content/tabla-labores"/>
	</definition>
        
        <definition name="tipos-labores-tabla" extends="template">
		<put-attribute name="leftpanel" value="left/submenu-labor"/>
		<put-attribute name="content_main" value="content/tabla-tipos-labores"/>
	</definition>
        
        <definition name="producciones-tabla" extends="template">
		<put-attribute name="leftpanel" value="left/submenu-produccion"/>
		<put-attribute name="content_main" value="content/tabla-producciones"/>
	</definition>
        
        <definition name="producciones-tabla-form-produccion" extends="producciones-tabla">
		<put-attribute name="rightpanel" value="right/form-produccion"/>
	</definition>
        
        <definition name="cultivos-tabla" extends="template">
		<put-attribute name="leftpanel" value="left/submenu-cultivo"/>
		<put-attribute name="content_main" value="content/tabla-cultivos"/>
	</definition>
        
        <definition name="cultivos-tabla-form-cultivo" extends="cultivos-tabla">
		<put-attribute name="rightpanel" value="right/form-cultivo"/>
	</definition>
        
        <definition name="configuracion-submenu" extends="template">
		<put-attribute name="content_main" value="content/default"/>
		<put-attribute name="leftpanel" value="left/submenu-configuracion"/>
	</definition>

</tiles-definitions>
